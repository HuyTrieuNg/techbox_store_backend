{
	"info": {
		"_postman_id": "promotion-api-complete",
		"name": "09. Promotion API (Complete)",
		"description": "All 9 endpoints for promotion management with discount calculations",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Promotions (Paginated)",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
						"if (pm.response.json().content && pm.response.json().content.length > 0) {",
						"    pm.collectionVariables.set(\"promotion_id\", pm.response.json().content[0].id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/promotions?page=0&size=10&sortBy=createdAt&sortDir=DESC",
					"host": ["{{base_url}}"],
					"path": ["api", "promotions"],
					"query": [
						{"key": "page", "value": "0"},
						{"key": "size", "value": "10"},
						{"key": "sortBy", "value": "createdAt"},
						{"key": "sortDir", "value": "DESC"}
					]
				}
			}
		},
		{
			"name": "Get Promotion By ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/promotions/{{promotion_id}}"
			}
		},
		{
			"name": "Get Promotions By Campaign",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/promotions/campaign/{{campaign_id}}"
			}
		},
		{
			"name": "Get Promotions By Product Variation",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/promotions/product-variation/{{variation_id}}"
			}
		},
		{
			"name": "Create Promotion (Percentage Discount)",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 201\", () => pm.response.to.have.status(201));",
						"if (pm.response.code === 201) {",
						"    pm.collectionVariables.set(\"created_promotion_id\", pm.response.json().id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"},
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"ruleName\": \"Promotion \" + Date.now(),\n  \"discountType\": \"PERCENTAGE\",\n  \"discountValue\": 15.00,\n  \"campaignId\": {{campaign_id}},\n  \"productVariationId\": {{variation_id}},\n  \"minOrderAmount\": 100.00,\n  \"maxDiscountAmount\": 50.00,\n  \"priority\": 1\n}"
				},
				"url": "{{base_url}}/api/promotions"
			}
		},
		{
			"name": "Create Promotion (Fixed Amount)",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 201\", () => pm.response.to.have.status(201));",
						"if (pm.response.code === 201) {",
						"    pm.collectionVariables.set(\"created_promotion_id\", pm.response.json().id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"},
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"ruleName\": \"Fixed Discount \" + Date.now(),\n  \"discountType\": \"FIXED_AMOUNT\",\n  \"discountValue\": 50.00,\n  \"campaignId\": {{campaign_id}},\n  \"productVariationId\": {{variation_id}},\n  \"minOrderAmount\": 200.00,\n  \"priority\": 2\n}"
				},
				"url": "{{base_url}}/api/promotions"
			}
		},
		{
			"name": "Update Promotion",
			"request": {
				"method": "PUT",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"},
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"ruleName\": \"Updated Promotion\",\n  \"discountType\": \"PERCENTAGE\",\n  \"discountValue\": 20.00,\n  \"campaignId\": {{campaign_id}},\n  \"productVariationId\": {{variation_id}},\n  \"minOrderAmount\": 150.00,\n  \"maxDiscountAmount\": 75.00,\n  \"priority\": 1\n}"
				},
				"url": "{{base_url}}/api/promotions/{{created_promotion_id}}"
			}
		},
		{
			"name": "Calculate Promotions (POST)",
			"request": {
				"method": "POST",
				"header": [
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"productVariationId\": {{variation_id}},\n  \"originalPrice\": 500.00,\n  \"quantity\": 2,\n  \"orderAmount\": 1000.00\n}"
				},
				"url": "{{base_url}}/api/promotions/calculate"
			}
		},
		{
			"name": "Calculate Promotions (GET)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/promotions/product-variation/{{variation_id}}/calculate?originalPrice=500.00&quantity=2&orderAmount=1000.00",
					"host": ["{{base_url}}"],
					"path": ["api", "promotions", "product-variation", "{{variation_id}}", "calculate"],
					"query": [
						{"key": "originalPrice", "value": "500.00"},
						{"key": "quantity", "value": "2"},
						{"key": "orderAmount", "value": "1000.00"}
					]
				}
			}
		},
		{
			"name": "Delete Promotion",
			"request": {
				"method": "DELETE",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"}
				],
				"url": "{{base_url}}/api/promotions/{{created_promotion_id}}"
			}
		}
	],
	"variable": [
		{"key": "base_url", "value": "http://localhost:8080"},
		{"key": "access_token", "value": ""},
		{"key": "promotion_id", "value": "1"},
		{"key": "created_promotion_id", "value": ""},
		{"key": "campaign_id", "value": "1"},
		{"key": "variation_id", "value": "1"}
	]
}
