{
	"info": {
		"_postman_id": "brand-api-complete",
		"name": "06. Brand API (Complete)",
		"description": "All 6 endpoints for brand management",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Brands",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
						"if (pm.response.json().length > 0) {",
						"    pm.collectionVariables.set(\"brand_id\", pm.response.json()[0].id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/brands"
			}
		},
		{
			"name": "Get Brand By ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/brands/{{brand_id}}"
			}
		},
		{
			"name": "Check Brand Name Exists",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/brands/exists?name=Apple",
					"host": ["{{base_url}}"],
					"path": ["api", "brands", "exists"],
					"query": [{"key": "name", "value": "Apple"}]
				}
			}
		},
		{
			"name": "Create Brand",
			"event": [{
				"listen": "prerequest",
				"script": {
					"exec": [
						"pm.collectionVariables.set(\"test_brand_name\", \"Brand \" + Date.now());"
					]
				}
			},
			{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 201\", () => pm.response.to.have.status(201));",
						"if (pm.response.code === 201) {",
						"    pm.collectionVariables.set(\"created_brand_id\", pm.response.json().id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"},
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"{{test_brand_name}}\",\n  \"description\": \"Test brand description\"\n}"
				},
				"url": "{{base_url}}/api/brands"
			}
		},
		{
			"name": "Update Brand",
			"request": {
				"method": "PUT",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"},
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"{{test_brand_name}} Updated\",\n  \"description\": \"Updated description\"\n}"
				},
				"url": "{{base_url}}/api/brands/{{created_brand_id}}"
			}
		},
		{
			"name": "Delete Brand",
			"request": {
				"method": "DELETE",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"}
				],
				"url": "{{base_url}}/api/brands/{{created_brand_id}}"
			}
		}
	],
	"variable": [
		{"key": "base_url", "value": "http://localhost:8080"},
		{"key": "access_token", "value": ""},
		{"key": "brand_id", "value": "1"},
		{"key": "created_brand_id", "value": ""},
		{"key": "test_brand_name", "value": ""}
	]
}
