{
	"info": {
		"_postman_id": "stock-export-api-complete",
		"name": "13. Stock Export API (Complete)",
		"description": "All 6 endpoints for stock export management with date filtering",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Stock Exports (With Filters)",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
						"if (pm.response.json().content && pm.response.json().content.length > 0) {",
						"    pm.collectionVariables.set(\"stock_export_id\", pm.response.json().content[0].id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/stock-exports?page=0&size=20&fromDate=2025-01-01&toDate=2025-12-31",
					"host": ["{{base_url}}"],
					"path": ["api", "stock-exports"],
					"query": [
						{"key": "page", "value": "0"},
						{"key": "size", "value": "20"},
						{"key": "fromDate", "value": "2025-01-01", "description": "Format: YYYY-MM-DD"},
						{"key": "toDate", "value": "2025-12-31", "description": "Format: YYYY-MM-DD"},
						{"key": "userId", "value": "", "disabled": true},
						{"key": "orderId", "value": "", "disabled": true},
						{"key": "documentCode", "value": "", "disabled": true}
					]
				}
			}
		},
		{
			"name": "Get All Stock Exports (Filter By Order)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/stock-exports?page=0&size=20&orderId=1",
					"host": ["{{base_url}}"],
					"path": ["api", "stock-exports"],
					"query": [
						{"key": "page", "value": "0"},
						{"key": "size", "value": "20"},
						{"key": "orderId", "value": "1"}
					]
				}
			}
		},
		{
			"name": "Get Stock Export By ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/stock-exports/{{stock_export_id}}"
			}
		},
		{
			"name": "Create Stock Export (Manual)",
			"event": [{
				"listen": "prerequest",
				"script": {
					"exec": [
						"const formatDate = (date) => {",
						"    const pad = (n) => String(n).padStart(2, '0');",
						"    const padMs = (n) => String(n).padStart(6, '0');",
						"    return date.getFullYear() + '-' + pad(date.getMonth() + 1) + '-' + pad(date.getDate()) +",
						"           'T' + pad(date.getHours()) + ':' + pad(date.getMinutes()) + ':' + pad(date.getSeconds()) +",
						"           '.' + padMs(date.getMilliseconds() * 1000);",
						"};",
						"",
						"const now = new Date();",
						"const docCode = 'EXP' + Date.now().toString().slice(-8);",
						"",
						"pm.collectionVariables.set(\"test_export_document_code\", docCode);",
						"pm.collectionVariables.set(\"export_date\", formatDate(now));"
					]
				}
			},
			{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 201\", () => pm.response.to.have.status(201));",
						"if (pm.response.code === 201) {",
						"    pm.collectionVariables.set(\"created_stock_export_id\", pm.response.json().id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"},
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"documentCode\": \"{{test_export_document_code}}\",\n  \"exportDate\": \"{{export_date}}\",\n  \"exportType\": \"MANUAL\",\n  \"note\": \"Manual stock export for inventory adjustment\",\n  \"items\": [\n    {\n      \"productVariationId\": {{variation_id}},\n      \"quantity\": 10\n    }\n  ]\n}"
				},
				"url": "{{base_url}}/api/stock-exports"
			}
		},
		{
			"name": "Create Stock Export From Order",
			"event": [{
				"listen": "prerequest",
				"script": {
					"exec": [
						"const formatDate = (date) => {",
						"    const pad = (n) => String(n).padStart(2, '0');",
						"    const padMs = (n) => String(n).padStart(6, '0');",
						"    return date.getFullYear() + '-' + pad(date.getMonth() + 1) + '-' + pad(date.getDate()) +",
						"           'T' + pad(date.getHours()) + ':' + pad(date.getMinutes()) + ':' + pad(date.getSeconds()) +",
						"           '.' + padMs(date.getMilliseconds() * 1000);",
						"};",
						"",
						"const now = new Date();",
						"const docCode = 'EXP' + Date.now().toString().slice(-8);",
						"",
						"pm.collectionVariables.set(\"test_export_document_code\", docCode);",
						"pm.collectionVariables.set(\"export_date\", formatDate(now));"
					]
				}
			},
			{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 201\", () => pm.response.to.have.status(201));",
						"if (pm.response.code === 201) {",
						"    pm.collectionVariables.set(\"created_stock_export_id\", pm.response.json().id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"},
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"documentCode\": \"{{test_export_document_code}}\",\n  \"exportDate\": \"{{export_date}}\",\n  \"note\": \"Stock export for order fulfillment\"\n}"
				},
				"url": "{{base_url}}/api/stock-exports/from-order/1"
			}
		},
		{
			"name": "Generate Stock Export Report (By Day)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/stock-exports/report?fromDate=2025-01-01&toDate=2025-12-31&groupBy=day",
					"host": ["{{base_url}}"],
					"path": ["api", "stock-exports", "report"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01", "description": "Format: YYYY-MM-DD"},
						{"key": "toDate", "value": "2025-12-31", "description": "Format: YYYY-MM-DD"},
						{"key": "groupBy", "value": "day", "description": "Options: day, month, product"}
					]
				}
			}
		},
		{
			"name": "Generate Stock Export Report (By Month)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/stock-exports/report?fromDate=2025-01-01&toDate=2025-12-31&groupBy=month",
					"host": ["{{base_url}}"],
					"path": ["api", "stock-exports", "report"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01"},
						{"key": "toDate", "value": "2025-12-31"},
						{"key": "groupBy", "value": "month"}
					]
				}
			}
		},
		{
			"name": "Generate Stock Export Report (By Product)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/stock-exports/report?fromDate=2025-01-01&toDate=2025-12-31&groupBy=product",
					"host": ["{{base_url}}"],
					"path": ["api", "stock-exports", "report"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01"},
						{"key": "toDate", "value": "2025-12-31"},
						{"key": "groupBy", "value": "product"}
					]
				}
			}
		}
	],
	"variable": [
		{"key": "base_url", "value": "http://localhost:8080"},
		{"key": "access_token", "value": ""},
		{"key": "stock_export_id", "value": "1"},
		{"key": "created_stock_export_id", "value": ""},
		{"key": "test_export_document_code", "value": ""},
		{"key": "export_date", "value": ""},
		{"key": "variation_id", "value": "1"}
	]
}
