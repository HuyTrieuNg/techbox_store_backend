{
	"info": {
		"_postman_id": "stock-import-api-complete",
		"name": "12. Stock Import API (Complete)",
		"description": "All 5 endpoints for stock import management with date filtering",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Stock Imports (With Filters)",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
						"if (pm.response.json().content && pm.response.json().content.length > 0) {",
						"    pm.collectionVariables.set(\"stock_import_id\", pm.response.json().content[0].id);",
						"    if (pm.response.json().content[0].documentCode) {",
						"        pm.collectionVariables.set(\"document_code\", pm.response.json().content[0].documentCode);",
						"    }",
						"}"
					]
				}
			}],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/stock-imports?page=0&size=20&fromDate=2025-01-01&toDate=2025-12-31",
					"host": ["{{base_url}}"],
					"path": ["api", "stock-imports"],
					"query": [
						{"key": "page", "value": "0"},
						{"key": "size", "value": "20"},
						{"key": "fromDate", "value": "2025-01-01", "description": "Format: YYYY-MM-DD"},
						{"key": "toDate", "value": "2025-12-31", "description": "Format: YYYY-MM-DD"},
						{"key": "supplierId", "value": "", "disabled": true},
						{"key": "userId", "value": "", "disabled": true},
						{"key": "documentCode", "value": "", "disabled": true}
					]
				}
			}
		},
		{
			"name": "Get All Stock Imports (Filter By Supplier)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/stock-imports?page=0&size=20&supplierId={{supplier_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "stock-imports"],
					"query": [
						{"key": "page", "value": "0"},
						{"key": "size", "value": "20"},
						{"key": "supplierId", "value": "{{supplier_id}}"}
					]
				}
			}
		},
		{
			"name": "Get Stock Import By ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/stock-imports/{{stock_import_id}}"
			}
		},
		{
			"name": "Get Stock Import By Document Code",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/stock-imports/by-code/{{document_code}}"
			}
		},
		{
			"name": "Create Stock Import",
			"event": [{
				"listen": "prerequest",
				"script": {
					"exec": [
						"const formatDate = (date) => {",
						"    const pad = (n) => String(n).padStart(2, '0');",
						"    const padMs = (n) => String(n).padStart(6, '0');",
						"    return date.getFullYear() + '-' + pad(date.getMonth() + 1) + '-' + pad(date.getDate()) +",
						"           'T' + pad(date.getHours()) + ':' + pad(date.getMinutes()) + ':' + pad(date.getSeconds()) +",
						"           '.' + padMs(date.getMilliseconds() * 1000);",
						"};",
						"",
						"const now = new Date();",
						"const docCode = 'IMP' + Date.now().toString().slice(-8);",
						"",
						"pm.collectionVariables.set(\"test_document_code\", docCode);",
						"pm.collectionVariables.set(\"import_date\", formatDate(now));"
					]
				}
			},
			{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 201\", () => pm.response.to.have.status(201));",
						"if (pm.response.code === 201) {",
						"    pm.collectionVariables.set(\"created_stock_import_id\", pm.response.json().id);",
						"    pm.collectionVariables.set(\"document_code\", pm.response.json().documentCode);",
						"}"
					]
				}
			}],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"},
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"documentCode\": \"{{test_document_code}}\",\n  \"supplierId\": {{supplier_id}},\n  \"importDate\": \"{{import_date}}\",\n  \"note\": \"Test stock import\",\n  \"items\": [\n    {\n      \"productVariationId\": {{variation_id}},\n      \"quantity\": 100,\n      \"unitPrice\": 50.00\n    }\n  ]\n}"
				},
				"url": "{{base_url}}/api/stock-imports"
			}
		},
		{
			"name": "Generate Stock Import Report (By Day)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/stock-imports/report?fromDate=2025-01-01&toDate=2025-12-31&groupBy=day",
					"host": ["{{base_url}}"],
					"path": ["api", "stock-imports", "report"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01", "description": "Format: YYYY-MM-DD"},
						{"key": "toDate", "value": "2025-12-31", "description": "Format: YYYY-MM-DD"},
						{"key": "groupBy", "value": "day", "description": "Options: day, month, supplier"}
					]
				}
			}
		},
		{
			"name": "Generate Stock Import Report (By Month)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/stock-imports/report?fromDate=2025-01-01&toDate=2025-12-31&groupBy=month",
					"host": ["{{base_url}}"],
					"path": ["api", "stock-imports", "report"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01"},
						{"key": "toDate", "value": "2025-12-31"},
						{"key": "groupBy", "value": "month"}
					]
				}
			}
		},
		{
			"name": "Generate Stock Import Report (By Supplier)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/stock-imports/report?fromDate=2025-01-01&toDate=2025-12-31&supplierId={{supplier_id}}&groupBy=supplier",
					"host": ["{{base_url}}"],
					"path": ["api", "stock-imports", "report"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01"},
						{"key": "toDate", "value": "2025-12-31"},
						{"key": "supplierId", "value": "{{supplier_id}}"},
						{"key": "groupBy", "value": "supplier"}
					]
				}
			}
		}
	],
	"variable": [
		{"key": "base_url", "value": "http://localhost:8080"},
		{"key": "access_token", "value": ""},
		{"key": "stock_import_id", "value": "1"},
		{"key": "created_stock_import_id", "value": ""},
		{"key": "document_code", "value": "IMP00001"},
		{"key": "test_document_code", "value": ""},
		{"key": "import_date", "value": ""},
		{"key": "supplier_id", "value": "1"},
		{"key": "variation_id", "value": "1"}
	]
}
