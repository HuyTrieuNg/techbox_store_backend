{
	"info": {
		"_postman_id": "product-variation-api-complete",
		"name": "04. Product Variation API (Complete)",
		"description": "All 12 endpoints for product variation management with images",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Product Variations",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
						"if (pm.response.json().length > 0) {",
						"    pm.collectionVariables.set(\"variation_id\", pm.response.json()[0].id);",
						"    if (pm.response.json()[0].sku) {",
						"        pm.collectionVariables.set(\"variation_sku\", pm.response.json()[0].sku);",
						"    }",
						"}"
					]
				}
			}],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/product-variations?includeDeleted=false",
					"host": ["{{base_url}}"],
					"path": ["api", "product-variations"],
					"query": [{"key": "includeDeleted", "value": "false"}]
				}
			}
		},
		{
			"name": "Get Product Variation By ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/product-variations/{{variation_id}}?includeDeleted=false",
					"host": ["{{base_url}}"],
					"path": ["api", "product-variations", "{{variation_id}}"],
					"query": [{"key": "includeDeleted", "value": "false"}]
				}
			}
		},
		{
			"name": "Get Variations By Product",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/product-variations/product/{{product_id}}"
			}
		},
		{
			"name": "Get In Stock Variations",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/product-variations/in-stock?productId={{product_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "product-variations", "in-stock"],
					"query": [{"key": "productId", "value": "{{product_id}}"}]
				}
			}
		},
		{
			"name": "Get Low Stock Variations",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/product-variations/low-stock?threshold=10",
					"host": ["{{base_url}}"],
					"path": ["api", "product-variations", "low-stock"],
					"query": [{"key": "threshold", "value": "10"}]
				}
			}
		},
		{
			"name": "Get Variation By SKU",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/product-variations/sku/{{variation_sku}}"
			}
		},
		{
			"name": "Check SKU Exists",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/product-variations/exists?sku=TEST-SKU-001",
					"host": ["{{base_url}}"],
					"path": ["api", "product-variations", "exists"],
					"query": [{"key": "sku", "value": "TEST-SKU-001"}]
				}
			}
		},
		{
			"name": "Create Product Variation",
			"event": [{
				"listen": "prerequest",
				"script": {
					"exec": [
						"const sku = \"SKU-\" + Date.now();",
						"pm.collectionVariables.set(\"test_sku\", sku);"
					]
				}
			},
			{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 201\", () => pm.response.to.have.status(201));",
						"if (pm.response.code === 201) {",
						"    pm.collectionVariables.set(\"created_variation_id\", pm.response.json().id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{"key": "variationName", "value": "Variation {{$timestamp}}", "type": "text"},
						{"key": "productId", "value": "{{product_id}}", "type": "text"},
						{"key": "price", "value": "999.99", "type": "text"},
						{"key": "sku", "value": "{{test_sku}}", "type": "text"}
					]
				},
				"url": "{{base_url}}/api/product-variations"
			}
		},
		{
			"name": "Update Product Variation",
			"request": {
				"method": "PUT",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{"key": "variationName", "value": "Updated Variation", "type": "text"},
						{"key": "price", "value": "1099.99", "type": "text"}
					]
				},
				"url": "{{base_url}}/api/product-variations/{{created_variation_id}}"
			}
		},
		{
			"name": "Update Stock Quantity",
			"request": {
				"method": "PATCH",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"}
				],
				"url": {
					"raw": "{{base_url}}/api/product-variations/{{variation_id}}/stock?stockQuantity=100",
					"host": ["{{base_url}}"],
					"path": ["api", "product-variations", "{{variation_id}}", "stock"],
					"query": [{"key": "stockQuantity", "value": "100"}]
				}
			}
		},
		{
			"name": "Delete Product Variation",
			"request": {
				"method": "DELETE",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"}
				],
				"url": "{{base_url}}/api/product-variations/{{created_variation_id}}"
			}
		},
		{
			"name": "Restore Product Variation",
			"request": {
				"method": "PATCH",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"}
				],
				"url": "{{base_url}}/api/product-variations/{{created_variation_id}}/restore"
			}
		}
	],
	"variable": [
		{"key": "base_url", "value": "http://localhost:8080"},
		{"key": "access_token", "value": ""},
		{"key": "product_id", "value": "1"},
		{"key": "variation_id", "value": "1"},
		{"key": "variation_sku", "value": ""},
		{"key": "created_variation_id", "value": ""},
		{"key": "test_sku", "value": ""}
	]
}
