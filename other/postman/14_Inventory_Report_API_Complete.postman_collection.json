{
	"info": {
		"_postman_id": "inventory-report-api-complete",
		"name": "14. Inventory Report API (Complete)",
		"description": "All 5 endpoints for inventory reporting and analytics with date filtering",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Stock Balance (All Products)",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
						"if (pm.response.json().length > 0) {",
						"    pm.collectionVariables.set(\"product_variation_id\", pm.response.json()[0].productVariationId);",
						"}"
					]
				}
			}],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/inventory/stock-balance",
					"host": ["{{base_url}}"],
					"path": ["api", "inventory", "stock-balance"]
				}
			}
		},
		{
			"name": "Get Stock Balance (With Filters)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/inventory/stock-balance?categoryId={{category_id}}&brandId={{brand_id}}&keyword=laptop",
					"host": ["{{base_url}}"],
					"path": ["api", "inventory", "stock-balance"],
					"query": [
						{"key": "categoryId", "value": "{{category_id}}", "disabled": false},
						{"key": "brandId", "value": "{{brand_id}}", "disabled": false},
						{"key": "keyword", "value": "laptop"}
					]
				}
			}
		},
		{
			"name": "Get Stock Balance (Low Stock)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/inventory/stock-balance?lowStock=true",
					"host": ["{{base_url}}"],
					"path": ["api", "inventory", "stock-balance"],
					"query": [
						{"key": "lowStock", "value": "true"}
					]
				}
			}
		},
		{
			"name": "Get Stock Balance (Out Of Stock)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/inventory/stock-balance?outOfStock=true",
					"host": ["{{base_url}}"],
					"path": ["api", "inventory", "stock-balance"],
					"query": [
						{"key": "outOfStock", "value": "true"}
					]
				}
			}
		},
		{
			"name": "Get Product History (Stock Movements)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/inventory/product-history/{{product_variation_id}}?fromDate=2025-01-01&toDate=2025-12-31",
					"host": ["{{base_url}}"],
					"path": ["api", "inventory", "product-history", "{{product_variation_id}}"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01", "description": "Format: YYYY-MM-DD"},
						{"key": "toDate", "value": "2025-12-31", "description": "Format: YYYY-MM-DD"}
					]
				}
			}
		},
		{
			"name": "Get Product History (All Time)",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/inventory/product-history/{{product_variation_id}}"
			}
		},
		{
			"name": "Get Stock Value Report (By Day)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/inventory/stock-value-report?fromDate=2025-01-01&toDate=2025-12-31&groupBy=day",
					"host": ["{{base_url}}"],
					"path": ["api", "inventory", "stock-value-report"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01", "description": "Format: YYYY-MM-DD"},
						{"key": "toDate", "value": "2025-12-31", "description": "Format: YYYY-MM-DD"},
						{"key": "groupBy", "value": "day", "description": "Options: day, month"}
					]
				}
			}
		},
		{
			"name": "Get Stock Value Report (By Month)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/inventory/stock-value-report?fromDate=2025-01-01&toDate=2025-12-31&groupBy=month",
					"host": ["{{base_url}}"],
					"path": ["api", "inventory", "stock-value-report"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01"},
						{"key": "toDate", "value": "2025-12-31"},
						{"key": "groupBy", "value": "month"}
					]
				}
			}
		},
		{
			"name": "Get Top Products (By Import)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/inventory/top-products?fromDate=2025-01-01&toDate=2025-12-31&type=import&limit=10",
					"host": ["{{base_url}}"],
					"path": ["api", "inventory", "top-products"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01", "description": "Format: YYYY-MM-DD"},
						{"key": "toDate", "value": "2025-12-31", "description": "Format: YYYY-MM-DD"},
						{"key": "type", "value": "import", "description": "Options: import, export"},
						{"key": "limit", "value": "10"}
					]
				}
			}
		},
		{
			"name": "Get Top Products (By Export)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/inventory/top-products?fromDate=2025-01-01&toDate=2025-12-31&type=export&limit=20",
					"host": ["{{base_url}}"],
					"path": ["api", "inventory", "top-products"],
					"query": [
						{"key": "fromDate", "value": "2025-01-01"},
						{"key": "toDate", "value": "2025-12-31"},
						{"key": "type", "value": "export"},
						{"key": "limit", "value": "20"}
					]
				}
			}
		},
		{
			"name": "Get Inventory Alerts",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/inventory/alerts",
					"host": ["{{base_url}}"],
					"path": ["api", "inventory", "alerts"]
				},
				"description": "Get real-time inventory alerts including out of stock, low stock, and overstock items"
			}
		}
	],
	"variable": [
		{"key": "base_url", "value": "http://localhost:8080"},
		{"key": "access_token", "value": ""},
		{"key": "product_variation_id", "value": "1"},
		{"key": "category_id", "value": "1"},
		{"key": "brand_id", "value": "1"}
	]
}
