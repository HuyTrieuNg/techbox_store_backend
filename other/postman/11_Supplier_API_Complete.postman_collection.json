{
	"info": {
		"_postman_id": "supplier-api-complete",
		"name": "11. Supplier API (Complete)",
		"description": "All 6 endpoints for supplier management",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Suppliers (Paginated)",
			"event": [{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
						"if (pm.response.json().content && pm.response.json().content.length > 0) {",
						"    pm.collectionVariables.set(\"supplier_id\", pm.response.json().content[0].id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/suppliers?page=0&size=20&keyword=&includeDeleted=false",
					"host": ["{{base_url}}"],
					"path": ["api", "suppliers"],
					"query": [
						{"key": "page", "value": "0"},
						{"key": "size", "value": "20"},
						{"key": "keyword", "value": "", "description": "Search keyword"},
						{"key": "includeDeleted", "value": "false"}
					]
				}
			}
		},
		{
			"name": "Search Suppliers",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/suppliers?page=0&size=20&keyword=tech&includeDeleted=false",
					"host": ["{{base_url}}"],
					"path": ["api", "suppliers"],
					"query": [
						{"key": "page", "value": "0"},
						{"key": "size", "value": "20"},
						{"key": "keyword", "value": "tech"},
						{"key": "includeDeleted", "value": "false"}
					]
				}
			}
		},
		{
			"name": "Get Supplier By ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/api/suppliers/{{supplier_id}}"
			}
		},
		{
			"name": "Create Supplier",
			"event": [{
				"listen": "prerequest",
				"script": {
					"exec": [
						"pm.collectionVariables.set(\"supplier_name\", \"Supplier \" + Date.now());"
					]
				}
			},
			{
				"listen": "test",
				"script": {
					"exec": [
						"pm.test(\"Status code is 201\", () => pm.response.to.have.status(201));",
						"if (pm.response.code === 201) {",
						"    pm.collectionVariables.set(\"created_supplier_id\", pm.response.json().id);",
						"}"
					]
				}
			}],
			"request": {
				"method": "POST",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"},
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"{{supplier_name}}\",\n  \"contactPerson\": \"John Doe\",\n  \"phone\": \"0123456789\",\n  \"email\": \"supplier@example.com\",\n  \"address\": \"123 Main Street\",\n  \"note\": \"Test supplier\"\n}"
				},
				"url": "{{base_url}}/api/suppliers"
			}
		},
		{
			"name": "Update Supplier",
			"request": {
				"method": "PUT",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"},
					{"key": "Content-Type", "value": "application/json"}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"{{supplier_name}} Updated\",\n  \"contactPerson\": \"Jane Smith\",\n  \"phone\": \"0987654321\",\n  \"email\": \"updated@example.com\",\n  \"address\": \"456 Updated Street\",\n  \"note\": \"Updated supplier information\"\n}"
				},
				"url": "{{base_url}}/api/suppliers/{{created_supplier_id}}"
			}
		},
		{
			"name": "Delete Supplier (Soft Delete)",
			"request": {
				"method": "DELETE",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"}
				],
				"url": "{{base_url}}/api/suppliers/{{created_supplier_id}}"
			}
		},
		{
			"name": "Restore Supplier",
			"request": {
				"method": "POST",
				"header": [
					{"key": "Authorization", "value": "Bearer {{access_token}}"}
				],
				"url": "{{base_url}}/api/suppliers/{{created_supplier_id}}/restore"
			}
		}
	],
	"variable": [
		{"key": "base_url", "value": "http://localhost:8080"},
		{"key": "access_token", "value": ""},
		{"key": "supplier_id", "value": "1"},
		{"key": "created_supplier_id", "value": ""},
		{"key": "supplier_name", "value": ""}
	]
}
